// jonson.js
// Módulo responsável por intermediar chamadas para o bridge e log de mensagens

// Importa a função do bridge
import { enviarParaAPI } from "./bridge.js";

// Função principal de envio de mensagens via API
export function processarMensagem(mensagem) {
    if (!mensagem || typeof mensagem !== "string") {
        console.error("Mensagem inválida:", mensagem);
        return;
    }

    try {
        // Chama o bridge para enviar a mensagem
        enviarParaAPI(mensagem);
        console.log(`Mensagem processada e enviada: [${mensagem}]`);
    } catch (erro) {
        console.error("Erro ao enviar para API:", erro);
    }
}

// Função auxiliar para testes rápidos
export function testarProcessamento() {
    const exemplo = "Olá, aqui é o Embryon fazendo um teste!";
    processarMensagem(exemplo);
